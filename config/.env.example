# ============================================
# Exemplo de arquivo .env para staging
# Copie este arquivo e ajuste os valores
# ============================================

APP_NAME="Sua Aplicação Staging"
APP_ENV=staging
APP_KEY=base64:GERAR_COM_php_artisan_key:generate
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=https://staging.seudominio.com.br
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR

# ============================================
# Domínio
# ============================================
DOMAIN=staging.seudominio.com.br

# ============================================
# GitHub Container Registry
# ============================================
GITHUB_REPO=seu-usuario/seu-repositorio

# ============================================
# Database PostgreSQL
# ============================================
DB_CONNECTION=pgsql
DB_HOST=postgres-plannerate
DB_PORT=5432
DB_DATABASE=sua_app_staging
DB_USERNAME=sua_app_staging
DB_PASSWORD=GERAR_SENHA_FORTE

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PASSWORD=GERAR_SENHA_FORTE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ============================================
# Cache & Session
# ============================================
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
QUEUE_CONNECTION=redis

# ============================================
# Reverb (WebSockets)
# ============================================
REVERB_APP_ID=sua-app-staging
REVERB_APP_KEY=GERAR_CHAVE_HEX_16
REVERB_APP_SECRET=GERAR_SECRET_HEX_32
REVERB_HOST=staging.seudominio.com.br
REVERB_PORT=8080
REVERB_SCHEME=https

VITE_REVERB_APP_KEY=${REVERB_APP_KEY}
VITE_REVERB_HOST=${REVERB_HOST}
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=wss

# ============================================
# Broadcast
# ============================================
BROADCAST_DRIVER=reverb
BROADCAST_CONNECTION=reverb

# ============================================
# Storage (DigitalOcean Spaces ou S3)
# ============================================
FILESYSTEM_DISK=do
DO_SPACES_KEY=SUA_CHAVE
DO_SPACES_SECRET=SEU_SECRET
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=seu-bucket

# ============================================
# Mail
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=seu-username
MAIL_PASSWORD=sua-senha
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@seudominio.com.br"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Multi-Tenancy (se usar Laravel Raptor)
# ============================================
LANDLORD_SUBDOMAIN=landlord
TENANT_SUBDOMAIN=tenant

# ============================================
# Logging
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# ============================================
# pgAdmin (opcional)
# ============================================
PGADMIN_EMAIL=seu-email@dominio.com
PGADMIN_PASSWORD=GERAR_SENHA_FORTE
